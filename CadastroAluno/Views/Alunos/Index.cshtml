@model List<CadastroAluno.Models.Domain.Aluno>
@{
}

<h1>Lista de Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Data de Nascimento</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
        {
            <tr>
                <td>@aluno.Id</td>
                <td>@aluno.Nome</td>
                <td>@aluno.Email</td>
                <td>@aluno.DataNascimento.ToString("dd/mm/yyyy")</td>
                <td><a href="Alunos/Ver/@aluno.Id">Ver</a></td>
            </tr>
        }
    </tbody>
</table>